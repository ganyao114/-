<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/card_main">

            <LinearLayout
                android:id="@+id/pic_rl"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- my_class_image_width -->
                <TextView
                    android:id="@+id/card_info_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="14dp"
                    android:text="XXX类仪表" />

                <TextView
                    android:id="@+id/card_info_title_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="12dp"
                    android:text="共计:10台" />

                <ImageView
                    android:id="@+id/card_info_icon"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/item_cover" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="12dp"
                android:id="@+id/card_right">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:id="@+id/card_pre_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="日数据:50条" />

                    <TextView
                        android:id="@+id/card_progress_txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="上线率:50.0%"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <ProgressBar
                        android:id="@+id/card_progressbar1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="4dp"
                        android:layout_height="6dp"
                        android:layout_below="@+id/card_pre_title1"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/myclass_myprogress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:id="@+id/card_pre_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="分数据:100条" />

                    <TextView
                        android:id="@+id/card_progress_txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="80.0%"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <ProgressBar
                        android:id="@+id/card_progressbar2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="6dp"
                        android:progress="80"
                        android:layout_below="@+id/card_pre_title2"
                        android:layout_marginTop="4dp"
                        android:indeterminate="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:id="@+id/card_pre_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="异常:40条" />

                    <TextView
                        android:id="@+id/card_progress_txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="80.0%"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/card_progressbar3"
                        android:layout_width="fill_parent"
                        android:layout_height="6dp"
                        android:progress="80"
                        android:layout_below="@+id/card_progress_txt3"
                        android:layout_marginTop="4dp"
                        android:indeterminate="false" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>