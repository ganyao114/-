<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    tools:showIn="@layout/content_lar_tab12_list">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:id="@+id/column1content"
        android:orientation="vertical">
        <com.gy.just.VoltageMonitor.View.Widget.AutoScrollTextView
            android:id="@+id/t12_id"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="安装地址"
            android:singleLine="true"
            android:background="@color/gray"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/normal_bg_color" />

    </LinearLayout>

    <com.gy.myframework.UI.customwidget.mutihostlist.InterceptScrollContainer
        android:id="@+id/scroollContainter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/column1content"
        android:focusable="false" >

        <com.gy.myframework.UI.customwidget.mutihostlist.MyHScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/normal_bg_color" />

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/t12_meterid"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="仪表id"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/normal_bg_color" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/normal_bg_color" />

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/t12_install"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="安装地点"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/normal_bg_color" />
                </LinearLayout>


                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/normal_bg_color" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/t12_fuzeren"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="负责人"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/normal_bg_color" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/normal_bg_color" />

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/t12_date"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="巡视日期"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/normal_bg_color" />
                </LinearLayout>


                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/normal_bg_color" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/t12_xunshiren"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="巡视人"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/normal_bg_color" />
                </LinearLayout>


                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/normal_bg_color" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/t12_starttime"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="开始时间"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/normal_bg_color" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/normal_bg_color" />

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/t12_endtime"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="结束时间"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/normal_bg_color" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/normal_bg_color" />

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/t12_wjindu"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="经度"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/normal_bg_color" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/normal_bg_color" />

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/t12_weidu"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="纬度"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/normal_bg_color" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/normal_bg_color" />

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/t12_height"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="高度"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/normal_bg_color" />
                    </LinearLayout>


                <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/normal_bg_color" />

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/t12_xunshikind"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="巡视种类"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/normal_bg_color" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/normal_bg_color" />


                </LinearLayout>

        </com.gy.myframework.UI.customwidget.mutihostlist.MyHScrollView>
    </com.gy.myframework.UI.customwidget.mutihostlist.InterceptScrollContainer>

</RelativeLayout>