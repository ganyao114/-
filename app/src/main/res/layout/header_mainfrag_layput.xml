<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.gy.myframework.UI.customwidget.mypageview.MyPageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mypageview">
    </com.gy.myframework.UI.customwidget.mypageview.MyPageView>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">
            <TabHost
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/download"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/radio"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="网站电台"
                    android:textColor="@color/gray" />
            </TabHost>
            <TabHost
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/download1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/paihang"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="最新排行"
                    android:textColor="@color/gray" />
            </TabHost>
            <TabHost
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/download2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/birthday"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="个人推荐"
                    android:textColor="@color/gray" />
            </TabHost>
        </TableRow>
    </TableLayout>
    <View
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:background="#66E0DFE0" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:src="@drawable/paihang"
            android:layout_gravity="start"
            android:layout_alignParentLeft="true"
            android:id="@+id/tipcover"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>
        <TextView
            android:id="@+id/morebt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|left"
            android:text="最新资讯"
            android:clickable="true"
            android:layout_toRightOf="@+id/tipcover" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|left"
            android:layout_alignParentRight="true"
            android:text="更多>>   " />
    </RelativeLayout>
</LinearLayout>